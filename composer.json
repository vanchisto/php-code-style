{
  "name": "vanchisto/php-code-style",
  "description": "PHP Code Style Tools",
  "type": "library",
  "keywords": [
    "php",
    "code-style",
    "dev",
    "fixer",
    "phpcs",
    "standards",
    "static analysis",
    "static code analysis"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Ivan Chistyakov",
      "email": "vanchisto@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Vanchisto\\CodeStyle\\": "src/"
    }
  },
  "scripts": {
    "test": [
      "php-cs-fixer fix",
      "phpcs"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.3",
    "friendsofphp/php-cs-fixer": "^3.52.1",
    "squizlabs/php_codesniffer": "^3.9"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  }
}
